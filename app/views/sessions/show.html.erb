<% winning?(@session, @user1, @user2) %>
  <div class="title">
    <h1>Tic Tac Toe</h1>
  </div>

<div class = "wrapper">
  <% if flash[:error] %>
    <p><%= flash[:error] %></p>
  <% end %>
  <div class = "winning">
    <div class = "text-holder">
      <div class= "player-counter">
      <p><%= @user1.name.capitalize %></p>
      <p>VS</p>
      <p><%= @user2.name.capitalize %></p>
      </div>
      <div class ="turn-counter">
      <p>Turn: <%= @counter %></p>
      </div>
      <div class= "player-turn">
      <p><%= @player.name.capitalize %>'s Turn </p>
      </div>
    </div>
    <%= render partial: 'shared/grid' %>
  </div>
</div>